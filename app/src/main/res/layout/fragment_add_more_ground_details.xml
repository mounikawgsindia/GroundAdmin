<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.AddGroundFragment"
        android:background="@drawable/white_bg">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/text_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/backIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/back_icon"
                    android:tint="@color/black"
                    tools:ignore="UseAppTint" />
                <!-- First TextView -->
                <TextView
                    style="@style/HeadingTextStyle_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_marginStart="10dp"
                    android:text="Add Ground"
                    android:textStyle="bold" />

                <!-- Cross Icon (ImageView) -->

            </LinearLayout>
            <LinearLayout
                android:id="@+id/image_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="18dp"
                app:layout_constraintTop_toBottomOf="@+id/text_ll"
                tools:ignore="MissingConstraints">

                <!-- First TextView -->
                <TextView
                    style="@style/NormalTextStyle_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:text="Ground Images"
                    android:textStyle="bold" />

                <!-- Second TextView (Add Image) -->
                <TextView
                    android:id="@+id/addimagetv"
                    style="@style/NormalTextStyle_Green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:text="Add Image"
                    android:textStyle="bold" />

                <!-- Cross Icon (ImageView) -->
                <ImageView
                    android:id="@+id/crossIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/close_white"
                    android:tint="@color/black"
                    android:contentDescription="Cross Icon"
                    android:layout_gravity="end"
                    tools:ignore="UseAppTint" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ground_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_ll"
                tools:ignore="MissingConstraints"
                tools:listitem="@layout/custom_ground_images" />


            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
