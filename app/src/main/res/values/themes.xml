<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GroundOwner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:windowBackground">@color/green</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="Theme.GroundOwner" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Theme.GroundOwner.Splash" parent="Base.Theme.GroundOwner">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/green</item>
<!--        <item name="android:windowSplashScreenAnimatedIcon">@drawable/sports</item>-->
<!--        <item name="postSplashScreenTheme">@style/Base.Theme.GroundOwner</item>-->
    </style>


